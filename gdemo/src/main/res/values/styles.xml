<resources>

    <!-- Base application theme. Theme.AppCompat.Light.DarkActionBar Base.V7.Theme.AppCompat.Light-->
    <style name="AppTheme" parent="@style/Theme.AppCompat">
        <item name="windowActionBar">false</item>

    </style>

    <!-- ActionBar styles -->
    <style name="DemoActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <!-- Support library compatibility -->
        <item name="background">@color/blue_primary</item>
        <item name="titleTextStyle">@style/DemoActionBarTitleText</item>
    </style>

    <!-- ActionBar title text -->
    <style name="DemoActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>

    <!-- ActionBar tabs text -->
    <style name="DemoActionBarTabText" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/white</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>

</resources>
