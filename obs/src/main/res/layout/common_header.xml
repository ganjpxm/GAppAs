<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/header_linear" android:baselineAligned="false"
    android:layout_width="match_parent" android:layout_height="45dp"
    android:background="@drawable/title_bg" android:orientation="horizontal">
    
	<LinearLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent"  android:gravity="left" android:orientation="vertical">
		<Button android:id="@+id/back_btn" android:layout_width="wrap_content" android:layout_height="40dp" android:paddingLeft="20dp"
		    android:layout_marginTop="1dp" android:paddingRight="5dp" android:text="@string/empty" android:drawableLeft="@drawable/icon_arrow_left_white"  
		    style="@style/txt_navigation" android:background="@color/transparent"/>
	</LinearLayout>
	
	<LinearLayout android:layout_width="0dp" android:layout_weight="3" android:layout_height="match_parent"  android:gravity="center" 
	    android:orientation="vertical">
		<TextView android:id="@+id/title_tv" android:layout_width="wrap_content" android:layout_height="match_parent" 
			android:text="@string/title"  android:textColor="@color/white"
			android:layout_marginBottom="5dp" android:layout_marginTop="10dp" android:layout_marginRight="4dp"
			android:layout_marginLeft="4dp" android:textSize="18sp" android:textStyle="bold"/>
	</LinearLayout>
	
	<LinearLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:gravity="right" android:orientation="vertical">
		<Button android:id="@+id/next_btn" android:layout_width="wrap_content" android:layout_height="40dp" android:paddingRight="20dp"
		    android:layout_marginTop="1dp" android:paddingLeft="5dp" android:text="@string/empty" android:drawableRight="@drawable/style_btn_next"  
		    style="@style/txt_navigation" android:background="@color/transparent"/>
	</LinearLayout>
</LinearLayout>
