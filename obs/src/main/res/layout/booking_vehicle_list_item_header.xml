<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/header_layout"
    android:layout_width="fill_parent"
    android:layout_height="40dp" android:background="@color/section_color" >

    <RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="horizontal">

        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="fill_parent">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="16dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="12dp"
                android:id="@+id/imageView"
                android:background="@drawable/icon_calendar_black"
                android:adjustViewBounds="true" />

            <TextView
                android:id="@+id/header_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="9dp"
                android:paddingLeft="6dp"
                android:singleLine="true"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textIsSelectable="false" android:background="@color/section_color"/>
        </LinearLayout>

        <TextView
            android:id="@+id/item_size_tv"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:singleLine="true"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:gravity="center"
            android:textIsSelectable="false"
            android:layout_alignParentRight="true"
            android:background="@drawable/style_circle_gray"
            />
    </RelativeLayout>

</FrameLayout>